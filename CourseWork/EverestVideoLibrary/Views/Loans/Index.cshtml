@model IEnumerable<CourseWork2.Models.Loan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Loan</h2>
<div class="m-4">
    <a class="btn btn-outline-primary" href="@Url.Action("Create", "Loans")">Add New Loan</a>
</div>


<table class="table table-hover">
    <tr>
        <th>
            Album
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoanTypes.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssuedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </th>
        <th>Due Date</th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Album.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanTypes.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedDate)
            </td>
            <td>@item.DueDate.ToShortDateString()</td>
            <td>
                @if (item.ReturnedDate == null)
                {
                    <a href="@Url.Action("Return" , new { id = item.Id })" class="btn btn-success"> Return </a>

                }

                        <a href="@Url.Action("Details" , new { id = item.Id })" class="btn btn-dark"> Detail</a>
                        <a href="@Url.Action("Delete" , new { id = item.Id })" class="btn btn-dark"> Delete</a>



                    </td>
        </tr>
    }
</table>