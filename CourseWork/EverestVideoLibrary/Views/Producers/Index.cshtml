@model IEnumerable<CourseWork2.Models.Producer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<h2>Producers</h2>
<div class="m-4">
    <a class="btn btn-outline-primary" href="@Url.Action("Create", "Producers")">Add New Producer</a>
</div>


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Studio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th class="pl-5">
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Studio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            <a href="@Url.Action("Edit" , new { id = item.Id })" class="btn btn-dark"> Edit </a>
            <a href="@Url.Action("Details" , new { id = item.Id })" class="btn btn-dark"> Detail</a>
            <a href="@Url.Action("Delete" , new { id = item.Id })" class="btn btn-dark"> Delete</a>
          
        </td>
    </tr>
}

</table>
